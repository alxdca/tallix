# Database connection
DATABASE_URL=postgresql://budget:budget_secret@localhost:5432/my_budget

# Database role safety
# Set to true ONLY for local development to allow superuser/BYPASSRLS roles
# MUST be false (or unset) in production to enforce RLS security
# Default: false
ALLOW_UNSAFE_DB_ROLE=false

# Server configuration
PORT=3001

# CORS - comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
NODE_ENV=development

# Demo mode - set to 'demo' to enable demo login (username: demo@tallix.org, password: demo)
MODE=

# LLM Classification (DeepSeek API)
# Get your API key from https://platform.deepseek.com/
DEEPSEEK_API_KEY=
DEEPSEEK_API_URL=https://api.deepseek.com/v1
