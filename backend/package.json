{
  "name": "@tallix/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "dotenv -e ../.env -e .env -- tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "dotenv -e ../.env -e .env -- drizzle-kit generate",
    "db:migrate": "dotenv -e ../.env -e .env -- drizzle-kit migrate",
    "db:push": "dotenv -e ../.env -e .env -- drizzle-kit push",
    "db:studio": "dotenv -e ../.env -e .env -- drizzle-kit studio",
    "check:rls": "bash scripts/check-rls-imports.sh",
    "rls:guard": "bash scripts/guard-rawdb-usage.sh",
    "test": "bash scripts/run-tests.sh",
    "test:rls": "dotenv -e ../.env -e .env -- tsx tests/rls-enforcement.test.ts"
  },
  "dependencies": {
    "axios": "^1.13.4",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "decimal.js": "^10.6.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.45.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "pdf-parse": "^2.4.5",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/decimal.js": "^7.4.3",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.11.0",
    "@types/pino": "^7.0.5",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
