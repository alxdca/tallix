# ============================================================
# PostgreSQL Configuration
# ============================================================

# Database connection details
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tallix

# Superuser credentials (for PostgreSQL container initialization and migrations)
POSTGRES_USER=tallix
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
POSTGRES_DB=tallix

# Application user (for runtime operations)
# Restricted to data operations only (no schema changes)
APP_DB_USER=tallix_app
APP_DB_PASSWORD=CHANGE_ME_IN_PRODUCTION

# ============================================================
# Backend Configuration
# ============================================================

# Backend port
PORT=3001

# Environment
NODE_ENV=production

# CORS origin (frontend URL)
CORS_ORIGIN=http://localhost

# Logging level
LOG_LEVEL=info

# Database role safety
# Set to true ONLY for local development to allow superuser/BYPASSRLS roles
# MUST be false (or unset) in production to enforce RLS security
ALLOW_UNSAFE_DB_ROLE=false

# ============================================================
# Authentication
# ============================================================

# JWT secret for authentication (required in all environments)
# Production/staging: use a random secret with at least 32 characters.
# Example: openssl rand -base64 48
JWT_SECRET=REPLACE_WITH_AT_LEAST_32_CHAR_RANDOM_SECRET

# ============================================================
# Features
# ============================================================

# Optional: Demo mode (set to 'demo' to enable demo user: demo@tallix.org / demo)
MODE=

# Optional: DeepSeek API for LLM transaction classification
# Get your API key from https://platform.deepseek.com/
DEEPSEEK_API_KEY=
DEEPSEEK_API_URL=https://api.deepseek.com/v1

# ============================================================
# Docker Configuration (for docker-compose.prod.yml)
# ============================================================

# GitHub repository (for image names)
# Format: username/repository (e.g., "alxdca/tallix")
GITHUB_REPOSITORY=your-username/your-repo

# Image tag for deployment (latest, main, or specific git sha)
IMAGE_TAG=latest
